
<div id="logo">
  <img src="static/assets/img/burgerLogo.jpg" alt="" class="logo">
</div>
{{#each burger}}
<span class="card">
	<span> <i>{{burger_name}}</i>  </span> 
	<br>
	<button class="change-eaten" data-id="{{this.id}}" data-eaten="{{devoured}}">
		{{#if devoured}}Re-Order Burger!{{else}}Eat the Meat!{{/if}}
	</button> 
	<br>
	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</span>
{{/each}}
<div> </div>
<form class="create-form">
  <hr>
  <h2>Add a Burger</h2>
  <div class="form-group">
    <label for="nameinput">Burger Name:</label>
    <input type="text" id="nameinput" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label>
    <br>
    <input type="radio" name="eaten" value="1" checked> Eaten!</inpu>
    <br>
    <input type="radio" name="eaten" value="0"> Un-eaten
  </div>

  <button class="create-burger" type="submit">Add Burger</button>
</form>